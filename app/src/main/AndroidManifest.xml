<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fragment">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tech.alarmManager.AlarmManagerActivity"></activity>
        <activity android:name="com.tech.jobScheduler.JobSchedulerActivity" />
        <activity android:name="com.tech.broadcast.BroadCastActivity" />
        <activity android:name="com.tech.jobIntent.JobIntentActivity" />
        <activity android:name="com.tech.bound.SecondActivity" />

        <service
            android:name="com.tech.bound.BoundService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name="com.tech.bound.BoundActivity" />

        <service android:name="com.tech.foregroundService.MyService" />
        <service
            android:name="com.tech.jobIntent.MyJobIntentService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver android:name="com.tech.broadcast.MyBroadCastReceiver" />
        <receiver android:name="com.tech.broadcast.CustomBroadCastReceiver" />
        <receiver android:name="com.tech.broadcast.OrderBroadCast2Receiver">
            <intent-filter android:priority="2">
                <action android:name="com.tech.broadcast.CUSTOM_BROADCAST" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.tech.broadcast.OrderBroadCast3Receiver">
            <intent-filter android:priority="3">
                <action android:name="com.tech.broadcast.CUSTOM_BROADCAST" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.tech.foregroundService.ForegroundActivity"
            android:enabled="true"
            android:exported="true" />
        <activity android:name="com.tech.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tech.fragment.FragmentActivity" />
        <receiver android:name="com.tech.alarmManager.AlarmBroadCast"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="com.tech.alarmManager.AlarmService"
            android:enabled="true"
            android:exported="false"
            android:process=":remote">

        </service>

        <service
            android:name="com.tech.jobScheduler.MyJobScheduler"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE"></service>
    </application>

</manifest>